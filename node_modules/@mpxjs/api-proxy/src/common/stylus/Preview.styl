.__mpx_preview__
  display none
  width 100%
  height 100%
  background black
  position fixed
  top 0
  left 0
  z-index 1000
  .__mpx_preview_tip__
    position absolute
    top 7px
    left 50%
    transform translateX(-50%)
    color #fff
    font-size 18px
    letter-spacing .3em
    text-align center
    width 100%
  .__mpx_preview_images__
    display flex
    width 100%
    height 100%
    transition transform 0.3s ease-in-out
    &>div
      flex-shrink 0
      width 100%
      height 100%
      background-position center
      background-size contain
      background-repeat no-repeat
